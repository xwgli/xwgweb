
@{
    ViewBag.Title = "[聊天室名称] - 小网格聊天室";
}

<h2 class="page-header">[聊天室名称] - 小网格聊天室（未完成）</h2>

<div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-10">
        <h2 class="row">小网格聊天室</h2>
        <div class="row form-inline">
            <div class="form-group">
                <label for="username">用户名：</label>
                <input id="username" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label for="password">密码：</label>
                <input id="password" class="form-control" type="password" />
            </div>
            <input id="login" class="btn btn-primary" type="button" value="登陆" />
        </div>
        <div class="row form-horizontal">
            <div class="form-group">
                <textarea id="message" class="form-control" rows="3" placeholder="请在此输入要发送的消息内容"></textarea>
            </div>
            <input id="sendmessage" class="btn btn-primary" type="button" value="发送" />
        </div>
        <div class="row" style="height: 10px;">
        </div>
        <div class="row">
            <div class="well">
                <ul id="discussion" style="padding-left: 10px;list-style: none;"></ul>
            </div>
        </div>
    </div>
    <div class="col-xs-1"></div>
</div>